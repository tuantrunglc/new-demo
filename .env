# Backend API Configuration
VUE_APP_BACKEND_URL=http://localhost:8000/api

# Application Configuration
VUE_APP_NAME=ShopVN
VUE_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# API Configuration
VUE_APP_API_TIMEOUT=30000
VUE_APP_ENABLE_MOCK_API=false

# Upload Configuration
VUE_APP_MAX_FILE_SIZE=5242880
VUE_APP_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Payment Configuration
VUE_APP_PAYMENT_GATEWAY_URL=https://payment.example.com
VUE_APP_PAYMENT_RETURN_URL=http://localhost:8080/payment/return

# Social Login
VUE_APP_GOOGLE_CLIENT_ID=your-google-client-id
VUE_APP_FACEBOOK_APP_ID=your-facebook-app-id

# Analytics
VUE_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
VUE_APP_ENABLE_LUCKY_SPIN=true
VUE_APP_ENABLE_WALLET=true
VUE_APP_ENABLE_COMMISSION=true
VUE_APP_ENABLE_CHAT_SUPPORT=true